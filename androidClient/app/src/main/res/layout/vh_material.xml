<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.9">

        <TextView
            android:id="@+id/tv_file_name"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Mechanics Oscillations and Waves" />

        <TextView
            android:id="@+id/tv_owner_name"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Mechanics Oscillations and Waves" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/download_status"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Status:" />

            <TextView
                android:id="@+id/status"
                android:textSize="14sp"
                android:padding="2dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="click to download" />


        </LinearLayout>

    </LinearLayout>

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/donut_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:donut_finished_color="#ee1dcf0d"
        app:donut_max="100"
        app:donut_background_color="@android:color/white"
        app:donut_progress="69.0" />

</LinearLayout>